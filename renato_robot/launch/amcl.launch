<launch>

    <!-- Map Server -->
    <arg name="map_file" default="$(find renato_robot)/maps/restaurant_renato.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- AMCL Node -->
    <node name="amcl" pkg="amcl" type="amcl" output="screen">
        <param name="odom_frame_id" value="odom"/>
        <param name="odom_model_type" value="diff-corrected"/>
        <param name="base_frame_id" value="robot_footprint"/>
        <param name="global_frame_id" value="map"/>
        <!-- <remap from="scan" to="renato_robot/laser/scan"/> -->

        <!-- If you choose to define initial pose here -->
        <param name="initial_pose_x" value="0"/>
        <param name="initial_pose_y" value="0"/>
        <param name="laser_min_range" value="0.01"/>
        <param name="laser_max_range" value="30.0"/>
        <param name="laser_max_beams" value="60"/>
        <param name="laser_z_hit" value="0.95"/>
        <param name="laser_z_short" value="0.1"/>
        laser_max_range

    </node>

    <!-- Move Base -->
    <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">

        <param name="base_global_planner" value="navfn/NavfnROS" />
        <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

        <rosparam file="$(find renato_robot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find renato_robot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find renato_robot)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find renato_robot)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find renato_robot)/config/base_local_planner_params.yaml" command="load" />
    </node>

</launch>